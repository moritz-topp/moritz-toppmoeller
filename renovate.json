{
	"dependencyDashboard": false,
	"extends": ["config:recommended"],
	"lockFileMaintenance": {
		"enabled": true,
		"schedule": ["after 9pm on sunday", "before 9am on monday"]
	},
	"schedule": ["after 10pm on monday, tuesday, wednesday, thursday, sunday", "before 8am every weekday"],
	"timezone": "Europe/Berlin",
	"packageRules": [
		{
			"matchUpdateTypes": [
				"major",
				"minor",
				"patch",
				"pin",
				"rollback",
				"lockFileMaintenance"
			],
			"automerge": false,
			"automergeType": "pr"
		},
		{
			"matchManagers": ["npm"],
			"matchUpdateTypes": ["minor"],
			"automerge": true,
			"automergeType": "pr"
		},
		{
			"matchManagers": ["npm"],
			"matchUpdateTypes": [
				"patch",
				"pin",
				"rollback",
				"lockFileMaintenance"
			],
			"automerge": true,
			"automergeType": "branch"
		}
	]
}
